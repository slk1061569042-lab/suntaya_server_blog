# Nginx 反向代理 Next.js 时关闭代理缓存（参考）
# 当「部署后直连 127.0.0.1:3001 已是新 Build，但浏览器访问域名仍是旧版」时，
# 检查站点配置是否启用了 proxy_cache；若启用，按下方关闭。
#
# 用法：在服务器上编辑 next.sunyas.com 的站点配置，替换 #PROXY-CONF-START 到 #PROXY-CONF-END 之间的
#       location ^~ / { ... } 整块为下方「整块替换示例」，然后：nginx -t && nginx -s reload

# ---------- 整块替换示例（主 location + 静态资源不缓存）-----------
location ^~ / {
    proxy_pass http://127.0.0.1:3001;
    proxy_set_header Host 127.0.0.1;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Real-Port $remote_port;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_set_header REMOTE-HOST $remote_addr;
    proxy_connect_timeout 60s;
    proxy_send_timeout 600s;
    proxy_read_timeout 600s;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_cache off;
    add_header X-Cache $upstream_cache_status;
    # 静态资源也关缓存，避免部署后仍看到旧版 css/js/图片
    location ~ .*\.(css|js|jpg|jpeg|gif|png|webp|woff|eot|ttf|svg|ico|css\.map|js\.map)$ {
        proxy_pass http://127.0.0.1:3001;
        proxy_cache off;
        proxy_set_header Host 127.0.0.1;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
